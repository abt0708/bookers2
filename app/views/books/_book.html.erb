      <div class="col-2">
        <% if book.image.attached? %>
          <%= image_tag book.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <h2>User info</h2>
        <table class="table">
          <tr>
            <th>name</th>
            <td><%= current_user.name if current_user %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction if current_user %></td>
          </tr>
        </table>
        
        <%= link_to edit_user_registration_path do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        <h1>New book</h1>
        <%= form_with model: book do |f| %>
    
          <h4>Title</h4>
          <%= f.text_field :title %>
          
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          
          <%= f.submit 'Submit',class: "btn btn-success btn-sm btn-block sign_up"   %>
    
        <% end %>
      </div>