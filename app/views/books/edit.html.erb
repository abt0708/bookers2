<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>
<% if @book.errors.any? %>
  <div style="background-color: white; color: black;">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <%= form_with model: @book do |f| %>

        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class: "form-control" %> <!-- テキストフィールドにBootstrapのスタイルを追加 -->
        </div>

        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class: "form-control" %> <!-- テキストエリアにもBootstrapのスタイルを追加 -->
        </div>

        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %> <!-- ボタンにBootstrapスタイル -->
        </div>

      <% end %>

      <p>
        <%= link_to "Show", book_path(@book) %>|
        <%= link_to "Back", books_path %>
      </p>
    
    </div>
  </div>
</div>
