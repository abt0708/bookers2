<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <!-- 左カラム -->
      <div class="col-md-3">
        <% if @book.errors.any? %>
          <div style="background-color: white; color: black;">
            <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= render 'books/book', book: @book %>
      </div>

      <!-- 右カラム：投稿された本の一覧 -->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th> 
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.profile_image, size: "80x80" %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(book.user) do %>
                  <%= image_tag 'no_image', size: "80x80" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td>
                <%= link_to "#{book.book_comments.count} コメント", book_path(book) %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
