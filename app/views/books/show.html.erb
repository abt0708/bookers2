<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
  <main>
    <div class = "container px-5 px-sm-0">
    <div class="row">
      <div class="col-lg-3">
        <% if @book.image.attached? %>
          <%= image_tag @book.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <h2>User info</h2>
        <table class="table table-bordered">
          <tr>
            <th>name</th>
            <td><%= current_user.name if current_user %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction if current_user %></td>
          </tr>
        </table>
        
        <%= link_to edit_user_registration_path do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
    
          <h4>Title</h4>
          <%= f.text_field :title %>
          
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          
          <%= f.submit 'Submit' %>
    
        <% end %>
      </div>

      <div class="col-lg-9">
       <h2>Book detail</h2>
       <table>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.image.attached? %>
                  <%= image_tag book.user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %>
                <% end %>
                <p><%= link_to book.user.name, user_path(book.user) %></p>
              </td>
              <td><%= link_to book.title, user_path(book.user) %></td>
              <td><%= book.body %></td>

              <% if current_user == book.user %>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td>
              <%= link_to 'Destroy', book_path(book) %>
              </td>
             <% end %>
            </tr>
         <% end %>
        </table>