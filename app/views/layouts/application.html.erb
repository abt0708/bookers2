  <!DOCTYPE html>
  <html>
    <head>
      <title>Bookers2</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <script src="https://kit.fontawesome.com/8d22d54aaa.js" crossorigin="anonymous"></script>
      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
    <div class="bg-dark text-white">
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container d-flex justify-content-between align-items-center">
  
          <% if user_signed_in? %>
              <!-- 左寄せ：Bookers -->
              <%= link_to "Bookers", root_path, class: "navbar-brand text-white" %>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-bars"></i>
              </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <!-- 右寄せ：ナビメニュー -->
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-house"></i><span> Home</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-users"></i><span> Users</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to books_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-book-open"></i><span> Books</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-right-from-bracket"></i><span> Log out</span>
                  <% end %>
                </li>
              </ul>
            </div>
          <% else %>
            <!-- ゲスト表示 -->
            <%= link_to "Bookers", root_path, class: "navbar-brand text-white" %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-house"></i><span> Home</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to about_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-link"></i><span> About</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-user-plus"></i><span> Sign in</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link text-white" do %>
                    <i class="fa-solid fa-right-from-bracket"></i><span> Log in</span>
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </nav>
    </header>
  </div>
  

      <%= yield %>

      <footer>
        <div class ="container mt-5">
          <div class = "row">
            <div class = "mx-auto">
              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
    </body>
  </html>
