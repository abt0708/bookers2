  <!DOCTYPE html>
  <html>
    <head>
      <title>Bookers2</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <script src="https://kit.fontawesome.com/8d22d54aaa.js" crossorigin="anonymous"></script>
      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
      <header>
        <% if user_signed_in? %>
          <li>
            <%= link_to root_path do %>
              <i class="fa-solid fa-house"></i><span>Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to users_path do%>
              <i class="fa-solid fa-users"></i><span>User</span>
            <% end %>
          </li>
          <li>
            <%= link_to books_path do %>
              <i class="fa-solid fa-book-open"></i><span>Books</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i><span>Log out</span>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path do %>
              <i class="fa-solid fa-house"></i><span>Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to "About", new_user_registration_path %>
          </li>
          <li>
            <%= link_to " Sine Up", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "Log in", new_user_session_path %>
          </li>
        <% end %>
      </header>

      <%= yield %>

      <footer>
        <div class ="container mt-5">
          <div class = "row">
            <div class = "mx-auto">
              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
    </body>
  </html>
