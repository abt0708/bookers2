<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<% if @user.errors.any? %>
  <div style="background-color: white; color: black; ">
    <h3><%= @user.errors.count %> errors prohibited this user from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user do |f| %>
        <h2>User info</h2>
      
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :image, "Image" %>
          <%= f.file_field :image, accept: "image/*", class: "form-control", style: "border: none;" %>
        </div>
      
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      
        <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
      <% end %>      
      </div>
    </div>
  </div>
</main>